{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) 디버깅 시작 - build 디렉토리 삭제 후 다시 생성",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/build/${fileBasenameNoExtension}", // 수정된 부분
            // "program": "${workspaceFolder}/build/${fileBasenameNoExtension}", // 수정된 부분
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}/build",
            // "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "gdb에 자동 서식 지정 사용",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "디스어셈블리 버전을 Intel(으)로 설정",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ 활성 파일 빌드"
        }
    ]
}